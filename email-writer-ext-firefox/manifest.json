{
  "name": "Email Writer Assistant Firefox",
  "description": "AI-Powered email reply generator for Firefox",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab", 
    "storage",
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Email Writer Assistant Firefox"
  },
  "applications": {
    "gecko": {
      "id": "email-writer@loop.firefox",
      "strict_min_version": "57.0"
    }
  }
}
